
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<title>Traversal Misafir Kayıt Ekranı</title>
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link rel="stylesheet" href="~/colorlib-regform-26/fonts/linearicons/style.css">
	<link rel="stylesheet" href="~/colorlib-regform-26/css/style.css">
</head>
<body>
	<div class="wrapper">
		<div class="inner">
			<img src="~/colorlib-regform-26/images/image-1.png" alt="" class="image-1">
			<form method="post">
				<h3>Yeni Hesap Oluşturun</h3>
				<div class="form-holder">
					<span class="lnr lnr-user"></span>
					<input type="text" name="Name" class="form-control" placeholder="Adınız">
				</div>
				<div class="form-holder">
					<span class="lnr lnr-users"></span>
					<input type="text" name="SurName" class="form-control" placeholder="Soyadınız">
				</div>
				<div class="form-holder">
					<span class="lnr lnr-envelope"></span>
					<input type="text" name="Mail" class="form-control" placeholder="Mail Adresiniz">
				</div>
				<div class="form-holder">
					<span class="lnr lnr-phone-handset"></span>
					<input type="text" name="UserName" class="form-control" placeholder="Kullanıcı Adınız">
				</div>
				<div class="form-holder">
					<span class="lnr lnr-lock"></span>
					<input type="password" name="Password" class="form-control" placeholder="Şifreniz">
				</div>
				<div class="form-holder">
					<span class="lnr lnr-briefcase"></span>
					<input type="password" name="ConfirmPassword" class="form-control" placeholder="Tekrar Şifreniz">
				</div>
				<button>
					<span>Kayıt Ol</span>
				</button>
			</form>
			<img src="~/colorlib-regform-26/images/image-2.png" alt="" class="image-2">
		</div>
	</div>
	<script src="~/colorlib-regform-26/js/jquery-3.3.1.min.js"></script>
	<script src="~/colorlib-regform-26/js/main.js"></script>
</body>
</html>